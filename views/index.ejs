<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Tableros de Mensajes</title>
  <link href="/public/bootstrap.min.css" rel="stylesheet">
  <script src="/public/jquery-3.5.1.min.js"></script>
  <script src="/public/bootstrap.bundle.min.js"></script>
  <link rel="stylesheet" href="/public/css/styles.css">
</head>
<body>
  <h2 class="mx-auto d-block shadow p-3 mb-5 rounded">The Dojo Message Board</h2>

  <div class="container">
    <div class="row border-4 rounded-start">

      <form action="/" method="POST" class="col-8 offset-2 formulario border-4 shadow rounded">
        
        <div class="row mb-3">
          <label for="name" class="col-sm-2 col-form-label">Name:</label>
          <input type="text" class="form-control" name="name" required>

          <label for="post" class="col-sm-2 col-form-label">Message:</label>
          <textarea id="content" name="post" rows="4" cols="50" required></textarea>
        </div>
        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
          <button class="btn btn-primary" type="submit">Post message</button>
        </div>
      
        
      </form>
    </div>
    
    <div id="messages">
      <% for (message of messages) { %>
      <!-- Primer mensaje-->
      <div class="message">
        <h3>Name: <%=message.name%>.</h4>
        <h4>Menssage: "<%= menssage.post%>"</h4>
        <div class="comments">
          <h5>Que buen mensaje</h5>
          <p>Cualquier persona</p>

          <h5>Que mal mensaje</h5>
          <p>Otro gallo</p>
        </div>

        <form action="">

        </form>
        <% } %>
      </div>

      <!-- Segundo mensaje-->
      <div class="message">
        <h2>Mi primer mensje</h2>
        <h4>anonimo</h4>
        <div class="comments">
          <h5>Que buen mensaje</h5>
          <p>Cualquier persona</p>

          <h5>Que mal mensaje</h5>
          <p>Otro gallo</p>
        </div>

        <form action="">
          
        </form>
      </div>
    </div>
  
  </div>
</body>
</html>